import os
import sys
import signal
import locale
import gettext
import glob

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# --- DEBUG & PATH DETECTION ---
print(f"DEBUG: Starting Gnostr {VERSION}")
print(f"DEBUG: Initial sys.path: {sys.path}")

# Find site-packages in /app
app_paths = glob.glob('/app/lib*/python*/site-packages')
print(f"DEBUG: Found site-packages paths: {app_paths}")

for path in app_paths:
    if path not in sys.path:
        sys.path.insert(0, path)
        print(f"DEBUG: Added {path} to sys.path")

# Check if ecdsa is actually there
try:
    import ecdsa
    print(f"DEBUG: Successfully imported ecdsa from {ecdsa.__file__}")
except ImportError as e:
    print(f"ERROR: Could not import ecdsa: {e}")
    # List contents of the paths we found to see what's wrong
    for path in app_paths:
        if os.path.exists(path):
            print(f"DEBUG: Contents of {path}: {os.listdir(path)}")

# Add the 'gnostr' package subdirectory
sys.path.insert(1, os.path.join(pkgdatadir, 'gnostr'))
# ------------------------------

signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('gnostr', localedir)
locale.textdomain('gnostr')
gettext.install('gnostr', localedir)

if __name__ == '__main__':
    import gi
    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'gnostr.gresource'))
    resource._register()

    import main
    sys.exit(main.main(VERSION))