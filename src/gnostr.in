import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# --- STANDARD PATH ---
# Since we merged lib64 into lib during build, we only need to check one path.
site_pkg = '/app/lib/python3.12/site-packages'
if os.path.exists(site_pkg) and site_pkg not in sys.path:
    sys.path.insert(0, site_pkg)

# Add application source
sys.path.insert(1, os.path.join(pkgdatadir, 'gnostr'))
# ---------------------

signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('gnostr', localedir)
locale.textdomain('gnostr')
gettext.install('gnostr', localedir)

if __name__ == '__main__':
    import gi
    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'gnostr.gresource'))
    resource._register()

    import main
    sys.exit(main.main(VERSION))