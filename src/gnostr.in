import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# --- ROBUST PATH FINDER ---
# Walk the /app directory to find where 'ecdsa' was actually installed.
# This works around arch differences (lib vs lib64) and prefix issues.
found_path = None
for root, dirs, files in os.walk('/app'):
    if 'ecdsa' in dirs:
        # We found the folder containing ecdsa, add its parent to path
        found_path = root
        break

if found_path:
    if found_path not in sys.path:
        sys.path.insert(0, found_path)
        # print(f"DEBUG: Found and added python path: {found_path}")
else:
    # Fallback: try adding common paths just in case os.walk missed it
    sys.path.insert(0, '/app/lib/python3.12/site-packages')
    sys.path.insert(0, '/app/lib64/python3.12/site-packages')
    # print("DEBUG: Could not locate ecdsa automatically, using fallbacks.")

# Add the 'gnostr' package subdirectory
sys.path.insert(1, os.path.join(pkgdatadir, 'gnostr'))
# --------------------------

signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('gnostr', localedir)
locale.textdomain('gnostr')
gettext.install('gnostr', localedir)

if __name__ == '__main__':
    import gi
    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'gnostr.gresource'))
    resource._register()

    import main
    sys.exit(main.main(VERSION))