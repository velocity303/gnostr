import os
import sys
import signal
import locale
import gettext
import glob

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# --- DYNAMIC PATH DETECTION ---
# Automatically find and add site-packages from /app
# This handles differences between x86 (lib) and ARM (lib64)
# and different Python versions (3.11, 3.12, etc.) automatically.
app_site_packages = glob.glob('/app/lib*/python*/site-packages')
for path in app_site_packages:
    if path not in sys.path:
        sys.path.insert(0, path)

# Add the 'gnostr' package subdirectory
sys.path.insert(1, os.path.join(pkgdatadir, 'gnostr'))
# ------------------------------

signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('gnostr', localedir)
locale.textdomain('gnostr')
gettext.install('gnostr', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'gnostr.gresource'))
    resource._register()

    # Import main directly now that sys.path is correct
    import main
    sys.exit(main.main(VERSION))