import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# --- PATH CONFIGURATION ---
# Explicitly add both potential install locations for Flatpak libraries.
# This fixes issues where ARM installs to lib64 but Python looks in lib.
# We assume Python 3.12 for GNOME 47 Runtime.
sys.path.insert(0, '/app/lib64/python3.12/site-packages')
sys.path.insert(0, '/app/lib/python3.12/site-packages')

# Add the application source directory
sys.path.insert(1, os.path.join(pkgdatadir, 'gnostr'))
# --------------------------

signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('gnostr', localedir)
locale.textdomain('gnostr')
gettext.install('gnostr', localedir)

if __name__ == '__main__':
    import gi
    from gi.repository import Gio

    # Try to import dependencies early to fail fast with a clear error
    try:
        import ecdsa
        import websocket
    except ImportError as e:
        print(f"CRITICAL ERROR: Failed to import dependency: {e}")
        print(f"Current sys.path: {sys.path}")
        # List directories to help debugging if it still fails
        for p in ['/app/lib/python3.12/site-packages', '/app/lib64/python3.12/site-packages']:
            if os.path.exists(p):
                print(f"Contents of {p}: {os.listdir(p)}")
            else:
                print(f"Path does not exist: {p}")
        sys.exit(1)

    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'gnostr.gresource'))
    resource._register()

    import main
    sys.exit(main.main(VERSION))