import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

# --- DYNAMIC PATH LOADER ---
# Python 3.12 (GNOME 47) might be in lib or lib64 depending on architecture.
# We add both potential site-packages paths to ensure dependencies are found.
possible_paths = [
    '/app/lib/python3.12/site-packages',
    '/app/lib64/python3.12/site-packages'
]

for path in possible_paths:
    if os.path.exists(path) and path not in sys.path:
        sys.path.insert(0, path)

# Add the 'gnostr' package subdirectory so 'import main' works
sys.path.insert(1, os.path.join(pkgdatadir, 'gnostr'))
# ---------------------------

signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('gnostr', localedir)
locale.textdomain('gnostr')
gettext.install('gnostr', localedir)

if __name__ == '__main__':
    import gi
    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'gnostr.gresource'))
    resource._register()

    import main
    sys.exit(main.main(VERSION))