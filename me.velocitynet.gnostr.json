{
    "app-id" : "me.velocitynet.Gnostr",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnostr",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "python3-websocket-client",
            "buildsystem" : "simple",
            "build-commands" : [
                "pip3 install --no-build-isolation --prefix=/app ."
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/websocket-client/websocket-client.git",
                    "tag" : "v1.9.0"
                }
            ]
        },
        {
            "name" : "gnostr",
            "builddir" : true,
            "buildsystem" : "simple",
            "build-commands" : [
                "install -D src/main.py /app/bin/gnostr",
                "chmod +x /app/bin/gnostr"
            ],
            "sources" : [
                {
                    "type" : "file",
                    "path" : "src/main.py"
                }
            ]
        }
    ]
}