{
    "app-id": "me.velocitynet.Gnostr",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "gnostr",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--env=PYTHONPATH=/app/lib/python3.12/site-packages:/app/lib64/python3.12/site-packages",
        "--env=GI_TYPELIB_PATH=/app/lib/girepository-1.0:/app/lib64/girepository-1.0"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "build-options": {
                "env": {
                    "CFLAGS": "",
                    "CXXFLAGS": "",
                    "LDFLAGS": ""
                }
            },
            "config-opts": [
                "-Dmanpage=false",
                "-Dgtk_doc=false",
                "-Dvapi=false",
                "-Dintrospection=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libsecret.git",
                    "tag": "0.21.4"
                }
            ]
        },
        {
            "name": "python3-websocket-client",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CFLAGS": "",
                    "CXXFLAGS": "",
                    "LDFLAGS": ""
                }
            },
            "build-commands": [
                "./install_websocket.sh"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/websocket-client/websocket-client.git",
                    "tag": "v1.9.0"
                },
                {
                    "type": "file",
                    "path": "install_websocket.sh"
                }
            ]
        },
        {
            "name": "gnostr",
            "buildsystem": "simple",
            "build-commands": [
                "./install_app.sh"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}